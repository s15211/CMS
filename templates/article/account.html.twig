{% extends'base.html.twig' %}

{% block head %}
    <!-- Font-->
    <link rel="stylesheet" type="text/css" href="css/sourcesanspro-font.css">
    <!-- Main Style Css -->
    <link rel="stylesheet" href="css/style.css"/>
{% endblock %}

{% block title %}
    {{ parent() }}
    {{ user.firstName }}
    {{ user.lastName }}
{% endblock %}

{% block body %}
    <h1>User Account</h1>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Gender</th>
                <th>Birthdate</th>
                <th>E-mail</th>
                <th>Places</th>
                <th>Phone number</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('user-show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                <td>{{ user.image }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.gender }}</td>
                <td>{{ user.birthdate }}</td>
                <td>{{ user.places }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.phoneNumber }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
