{% block head %}
	<!-- Font-->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&display=swap" rel="stylesheet">
	<!-- Style Main -->
	<link rel="stylesheet" href="css/main.css">
	<!-- Style Form -->
	<link rel="stylesheet" href="css/form.css">
	<!-- Style Media -->
	<link rel="stylesheet" href="css/media.css">
	<!-- Style Reset -->
	<link rel="stylesheet" href="css/reset.css">
{% endblock %}

{% block content %}
     <header>
        <div class="wrapper">
            <div class="logo">
                <h1>
                    <a href="/"> logo here </a>
                </h1>
            </div>
            <div class="nav">
                <div class="navigation__element"><a href="list.html">List</a></div>
                <div class="navigation__element"><a href="">link 2</a></div>
                <div class="navigation__element"><a href="">link 3</a></div>
                <div class="navigation__element"><a href="">link 4</a></div>
                <div class="navigation__element"><a href="">link 5</a></div>
            </div>
        </div>
    </header>
	<section>
        <h1>Create new article</h1>
        <div class="wrapper columns">
            <div class="post__main">
                <div class="main__detail-wrapper">
                    <form action="/newArticle" method="post"> 
                        <label for="">Article title</label>
                        <input required name="title" placeholder="Put title here" type="text">
                        <label for="">Article image</label>
                        <input name="file" type="file" accept="image/x-png,image/gif,image/jpeg">
                        <label for="">Article Lead</label>
                        <input name="lead" placeholder="Article lead if needed" type="text">
                        <label for="">Article body</label>
                            <textarea required name="body" name="" id="" cols="30" rows="10"></textarea>
                        <input type="submit" value="Submit">
                    </form>
                </div>
            </div>
        </div>
    </section>
    <footer class="footer">
        <div class="wrapper">
            <h1>footer</h1>
        </div>
    </footer>
{% endblock %}
